{
    "configurations": [
        
    {
        "name": "(gdb) Launch",
        "preLaunchTask": "build",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/out/${fileBasenameNoExtension}",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
       
        "miDebuggerPath": "${workspaceFolder}/task/sudo_gdb",
      
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    }
    ]
}
